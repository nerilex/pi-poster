currentdict /__trigo_inc_ps__ known not {

/__trigo_inc_ps__ true def

systemdict /arccos known not {
% x -- arccos(x)
/arccos {
%	dup (arccos\() print 20 string cvs print (\) = ) print
	1 add 2 div dup truncate sub 2 mul 1 sub % normalize x into [-1; +1]
%	dup (arccos\() print 20 string cvs print (\) = ) print
	dup
	1 add exch
	1 exch sub
	div sqrt
	1 atan 2 mul
%	dup 20 string cvs print (\n) print
} def
} if

systemdict /arcsin known not {
% x -- arcsin(x)
/arcsin {
	arccos
	90 div
	dup truncate sub
	90 mul
} def
} if

/to_rad_fact 2 3.1415926 mul 360 div def
/to_deg_fact 1 to_rad_fact div def

/to_rad {
	to_rad_fact mul
} def

/to_deg {
	to_deg_fact mul
} def

} if
